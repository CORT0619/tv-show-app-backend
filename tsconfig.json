{
	"compilerOptions": {
		"resolveJsonModule": true,
		"module": "Node16",
		"sourceMap": true,
		"outDir": "dist",
		"rootDir": "src",
		"noImplicitAny": false,
		"declaration": true,
		"moduleResolution": "Node16",
		"esModuleInterop": true,
		"types": [
			"jest",
			"bcrypt",
			"cookie-parser",
			"jsonwebtoken",
			"multer",
			"node",
			"express",
			"uuid",
			"supertest",
			"cors"
		]
	},
	"include": [
		"src/**/*",
		"src/tests/*",
		"**/*.spec.ts"
	],
	"strict": true
}